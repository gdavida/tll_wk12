<div class="container">
<ul class="collection with-header">
  <li class="collection-header"><h4>All Statuses</h4></li>
  <% @statuses.each do |s|%>
	<li class="collection-item">
	  <div><%= link_to s.category, status_path(s)%>
	    <span class="secondary-content">
			<%= s.color %>
			</span>
	  </div>
	</li>
	<% end %>
</ul>
</div>